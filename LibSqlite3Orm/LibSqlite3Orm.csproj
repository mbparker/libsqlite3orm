<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <LangVersion>latestmajor</LangVersion>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>disable</Nullable>
        <Configurations>Release;Debug</Configurations>
        <Platforms>AnyCPU</Platforms>
        <Title>LibSqlite3Orm</Title>
        <Description>A cross platform, easy to use, Object Relational Mapper for SQLite 3</Description>
        <Copyright>Copyright (c) 2025, Mathew Parker</Copyright>
        <RepositoryUrl>https://github.com/mbparker/libsqlite3orm</RepositoryUrl>
        <PackageTags>Cross Platform, ORM, .NET, Sqlite</PackageTags>
        <Version>1.4.6</Version>
        <Company>Mathew Parker</Company>
        <Authors>Mathew Parker</Authors>
        <AssemblyVersion>1.4.6.0</AssemblyVersion>
        <FileVersion>1.4.6.0</FileVersion>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Autofac" Version="8.4.0" />
      <PackageReference Include="LibODataParser" Version="1.0.4" />
      <PackageReference Include="Newtonsoft.Json" Version="13.0.4" />
      <PackageReference Include="System.IO.Hashing" Version="9.0.10" />
      <PackageReference Include="SQLitePCLRaw.lib.e_sqlite3" Version="2.1.11" />
    </ItemGroup>

    <PropertyGroup>
        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    </PropertyGroup>

    <PropertyGroup>
        <ContinuousIntegrationBuild>true</ContinuousIntegrationBuild>
        <DebugSymbols>true</DebugSymbols>
        <DebugType>portable</DebugType>
    </PropertyGroup>

    <PropertyGroup>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
    </PropertyGroup>
    
    <ItemGroup>
        <None Include="..\README.md" Pack="true" PackagePath="\"/>
        <None Include="..\LICENSE.txt" Pack="true" PackagePath="\"/>
    </ItemGroup>

</Project>
